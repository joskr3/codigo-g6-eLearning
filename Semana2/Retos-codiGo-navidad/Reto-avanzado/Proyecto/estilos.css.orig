@import url("https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&family=Roboto:wght@100;300;400;500;600;700;800;900&display=swap");

* {
    background-color: white;
    padding: 0;
    margin: 0;
}

body {
    width: 100%;
    size: 16px;
    /*font-family: "Roboto", sans-serif;*/
    /*font-family: 'Noto Sans', sans-serif;*/
    font-family: Verdana, Geneva, Tahoma, sans-serif, sans-serif;
}

.container-1 {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.container-1 > img {
    width: 50%;
    min-width: 500px;
}

.container-1 section {
    width: 50%;
    margin: 60px 0 30px 40px;
    display: flex;
    flex-direction: column;
}

.fa-twitter {
    color: #2398f6;
    font-size: 40px;
    margin-bottom: 20px;
}

.container-1 section header h1 {
    font-size: 4rem;
    font-weight: 1000;
    margin: 40px 0;
}

.container-1 section header h2 {
    font-size: 1.9rem;
    font-weight: 800;
    margin: 20px 0;
    letter-spacing: 1.2px;
}

.container-1 section h3 {
    font-size: 0.9rem;
    font-weight: 800;
    margin: 60px 0 10px 0;
}

.container-1 section .content-actions {
    display: flex;
    flex-direction: column;
    width: 300px;
}

section div :nth-child(2) {
    font-weight: 700;
}

section div :last-child button {
    color: #2398f6;
}

button {
    margin: 5px 0;
    width: 300px;
    height: 40px;
    border-radius: 20px;
    font-size: 0.9rem;
    cursor: pointer;
    border: 1px solid #d4d4d4;
}

button > :first-child {
    margin-right: 4px;
    width: 15px;
    height: 15px;
}

.primary {
    background-color: #2398f6;
    color: white;
    font-weight: 600;
}

.conditions {
    font-size: 0.6rem;
}

.conditions a {
    text-decoration: none;
    color: rgb(29, 155, 240);
    font-weight: 600;
}

.or-class {
    width: 100%;
    height: 30px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    text-align: center;
    margin-top: 6px;
}
.or-class div {
    width: 50%;
    background-color: rgb(75, 75, 75);
    height: 1px;
    margin-top: 10px;
}

.or-class span {
    padding: 0 10px;
}

footer {
    width: 100%;
    border: 0 50px;
    margin: 20px 0;
    font-size: 0.7rem;
}
footer nav ul {
    display: flex;
    flex-direction: row;
    justify-content: center;
    text-align: center;
}

footer nav ul li {
    list-style: none;
    color: #000;
    margin: 0 6px;
}

footer nav ul li a {
    text-decoration: none;
    cursor: pointer;
}

footer div {
    justify-content: center;
    text-align: center;
    margin-top: 10px;
}

@media only screen and (max-width: 1024px) {
    .container-1 {
        flex-direction: column;
    }
    
    .container-1 section {
        order: 1;
        width: 100%;
    }
    .container-1 img {
        order: 2;
    }
}
